# Environment Configuration
ENVIRONMENT=development
LOG_LEVEL=info
LOG_FORMAT=pretty
RUST_LOG=solana_sniper_bot=debug,info

# Solana Blockchain Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
HELIUS_API_KEY=your_helius_api_key_here
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your_key
BIRDEYE_API_KEY=your_birdeye_api_key_here
BIRDEYE_BASE_URL=https://public-api.birdeye.so

# Database Configuration
DATABASE_URL=postgres://sniper_user:sniper_pass@localhost:5432/sniper_bot
REDIS_URL=redis://localhost:6379/0

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_CHAT_ID=your_admin_chat_id
ALLOWED_USER_IDS=123456789,987654321

# Security Configuration
ENCRYPTION_KEY=your_32_byte_encryption_key_base64_encoded
WALLET_PRIVATE_KEY=your_encrypted_wallet_private_key

# Trading Configuration
SCENARIO_MODE=dev
MAX_POSITION_SIZE_SOL=1.0
DEFAULT_SLIPPAGE_PERCENT=3.0
STOP_LOSS_PERCENT=20.0
TAKE_PROFIT_PERCENT=100.0
MAX_CONCURRENT_TRADES=5
TRADE_EXECUTION_TIMEOUT_MS=50

# Risk Management Configuration
RISK_SCORE_THRESHOLD=7
MAX_DAILY_LOSS_PERCENT=10.0
MAX_DRAWDOWN_PERCENT=20.0
EMERGENCY_STOP_LOSS_PERCENT=50.0

# Performance Configuration
RPC_TIMEOUT_MS=5000
CONNECTION_POOL_SIZE=20
MAX_RETRIES=3
RETRY_BACKOFF_MS=1000

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_PORT=8080
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268

# Development Configuration (only used in dev mode)
ENABLE_DEBUG_LOGS=true
SIMULATION_MODE=true
MOCK_EXTERNAL_APIS=false

# Production Configuration (only used in prod mode)
ENABLE_AUDIT_LOGGING=true
SESSION_TIMEOUT_MINUTES=60
RATE_LIMIT_PER_MINUTE=60

# Build Information (set automatically)
BUILD_TIMESTAMP=2024-06-02T10:00:00Z
GIT_HASH=development